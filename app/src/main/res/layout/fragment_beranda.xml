<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile"
                android:src="@drawable/ic_user"
                android:layout_width="75dp"
                android:layout_height="75dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/tv_username"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_expand_more"
                        android:tint="@color/colorBlue"
                        android:layout_alignParentRight="true"
                        android:backgroundTint="#A6A6A6"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/iv_alarm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_alarm"
                    android:drawableLeft="@drawable/ic_alarm"
                    android:drawablePadding="5dip"
                    android:text="@string/alarm"
                    android:textColor="@color/colorBluePrimary"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="4"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/menu_absensi"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="@drawable/circle_background_blue">
                    <ImageView
                        app:layout_constraintDimensionRatio="1:1"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_absensi"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:text="@string/menu_absensi"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_pelajaran"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="@drawable/circle_background_blue">
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        android:src="@drawable/ic_pelajaran"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:text="@string/menu_pelajaran"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_akademik"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/circle_background_blue">
                    <ImageView
                        android:layout_width="fill_parent"
                        app:layout_constraintDimensionRatio="1:1"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_akademik"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:text="@string/menu_akademuik"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/menu_nilai"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="@drawable/circle_background_blue">
                    <ImageView
                        android:layout_width="fill_parent"
                        app:layout_constraintDimensionRatio="1:1"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_nilai"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:text="@string/menu_nilai"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="4"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/menu_raport"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="@drawable/circle_background_blue">
                    <ImageView
                        app:layout_constraintDimensionRatio="1:1"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_raport"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:text="@string/menu_raport"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_prestasi"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="@drawable/circle_background_blue">
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        android:src="@drawable/ic_prestasi"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"
                    android:text="@string/menu_prestasi"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_ekstrakurikuler"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/circle_background_blue">
                    <ImageView
                        android:layout_width="fill_parent"
                        app:layout_constraintDimensionRatio="1:1"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_ekskul"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:text="@string/menu_ekskul"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/menu_lainnya"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="@drawable/circle_background_blue">
                    <ImageView
                        android:layout_width="fill_parent"
                        app:layout_constraintDimensionRatio="1:1"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_lainnya"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:text="@string/menu_lainnya"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorBlack"
            android:text="@string/pengumuman"
            android:textStyle="bold"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorBluePrimary">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBluePrimary">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:maxHeight="100dp"
                        android:scaleType="fitXY"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:src="@drawable/masuk_ptn2"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:gravity="end"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/btn_informasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:layout_margin="10dp"
                            android:background="@drawable/rounded_white_background"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"

                            android:text="Informasi Masuk PTN"/>
                    </LinearLayout>
                </RelativeLayout>
<!--                <TextView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:padding="10dp"-->
<!--                    android:text="@string/pengumuman"-->
<!--                    android:textColor="@color/colorWhite"/>-->
<!--                <Button-->
<!--                    android:gravity="center"-->
<!--                    android:layout_margin="10dp"-->
<!--                    android:layout_gravity="end"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:text="What"-->
<!--                    android:layout_height="wrap_content"/>-->
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="@string/berita"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                />
            <TextView
                android:id="@+id/tv_beranda_lihatsemua"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBluePrimary"
                android:textSize="12sp"
                android:text="@string/lihat_semua"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/berita"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/colorBluePrimary">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:maxHeight="100dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@drawable/img_upacara"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_judulberita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_title"
                    >
                    <TextView
                        android:id="@+id/tv_beranda_judulberita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="Pembukaan Dies Natalis Angkatan 42"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

