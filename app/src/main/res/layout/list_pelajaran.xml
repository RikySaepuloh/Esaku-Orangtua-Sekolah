<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_marginBottom="10dp"
    android:weightSum="8"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_weight="1"
        android:layout_marginLeft="-10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_statuskehadiran"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:padding="12.5dp"
            android:src="@drawable/ic_listbiru"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_weight="4"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/list_pelajaran_mapel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pelajaran"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/list_pelajaran_guru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Guru"/>
    </LinearLayout>
    <TextView
        android:id="@+id/list_pelajaran_statushadir"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Status"/>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/list_pelajaran_mulai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="center"
            android:text="12.30"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/list_pelajaran_berakhir"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="09.30"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>